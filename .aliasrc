# Enhance default commands
alias ls='ls --color=auto --group-directories-first'
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al' # :D
alias lc='ls --color=never'
alias lock='vlock -n'
alias bell='echo -en "\007"'
alias grep='grep --color=auto'
alias xm='setxkbmap se && xset r rate 330 45 && xmodmap ~/.Xmodmap'
