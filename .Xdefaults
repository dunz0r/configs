! URxvt
URxvt*font:xft:Monte Carlo:pixelsize=10:antialias=true
URxvt*boldFont:xft:Monte Carlo:bold:pixelsize=10:antialias=true

URxvt.loginShell: true

URxvt*loginShell:       true
URxvt*saveLines:        5500
URxvt*cutchars:         `"()'*<>[]{|}
/* places a hardcopy in home dir when print is pressed */
URxvt.print-pipe: cat > $(TMPDIR=$HOME mktemp urxvt.XXXXX)

URxvt.perl-ext:      default,url-select
URxvt.keysym.C-M-u:    perl:url-select:select_next
URxvt.urlLauncher:   luakit
URxvt.underlineURLs: true

URxvt*depth: 32
URxvt*background: rgba:1111/1111/1111/dddd
URxvt*foreground: #cccccc

URxvt*transparent:        true
URxvt.cursorBlink:        true
URxvt.cursorOnTime:       300
URxvt.cursorOffTime:      140
URxvt*shading:            20
!URxvt*fading:             40
URxvt*scrollBar:          False

URxvt*colorBD:            lightyellow
URxvt*colorUL:            green
URxvt.cursorColor: #999

Xft.dpi:		96	
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintsfull
Xft.lcdfilter:  lcddefault

! this line makes so that only the SSH-sessions become "Urgent" on bell
SSH*urgentOnBell: true

! XTerm
XTerm*Background: black
XTerm*Foreground: grey90
XTerm*LoginShell: true
XTerm*CursorColor: rgb:99/99/00
XTerm*printerAutoClose: true

! XLock
XLock.invalidCapsLock: Invalid login.
XLock.mode: matrix
XLock.info:  
XLock.program: fortune -ao
XLock.username:
XLock.password:
XLock.erasetime: 3
XLock.mono: true

! Which theme to use
#include "/home/gabriel/.xdefaults-colour/tango.Xresources"
! EOF
